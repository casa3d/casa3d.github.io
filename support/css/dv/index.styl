body
  margin 0
  overflow hidden
  #ops button,fieldset
    font-family Segoe UI Symbol
  div
    font-weight bold
    transition .5s ease
    &#ops:hover
      top 0
    &#ops
      height 15%
      position fixed
      min-height 100px
      width 100%
      button
        border-radius 15px 0
        box-shadow dodgerblue 4px 3px 10px
        color #FFF
        cursor pointer
        font-size 4.4em
        height 100%
        min-width 100px
        opacity .9
        padding 0
        width 10%
        &:nth-of-type(1)
          background linear-gradient(45deg,black,green,black)
        &:nth-of-type(2)
          background linear-gradient(45deg,black,blue,black)
        &:nth-of-type(3)
          background linear-gradient(45deg,black,darkcyan,black)
        &:nth-of-type(4)
          background linear-gradient(45deg,black,goldenrod,black)
        &:nth-of-type(5)
          background linear-gradient(45deg,black,saddlebrown,black)
        &:nth-of-type(6)
          background linear-gradient(45deg,black,red,black)
        &:nth-of-type(7)
          background linear-gradient(45deg,black,grey,black)
    &#roll
      background linear-gradient(90deg,green,blue,darkcyan,goldenrod,saddlebrown,red,grey,black 110%)
      height 100%
      position absolute
      width 700%
      >div
        background linear-gradient(20deg,white,rgba(255, 255, 255, 0.25),white)
        height 100%
        float left
        font-size 1.15em
        overflow auto
        width 14.2857%
.in
  top 0
.out
  top -13.5%
.green
  background repeating-radial-gradient(rgba(0,255,0,.6),rgba(0,0,0,.6)4%),repeating-linear-gradient(0deg,black,green 20%)
.blue
  background repeating-radial-gradient(rgba(0,0,255,.6),rgba(0,0,0,.6)4%),repeating-linear-gradient(30deg,black,blue 3%)
.darkcyan
  background repeating-radial-gradient(rgba(0,139,139,.6),rgba(0,0,0,.6)4%),repeating-linear-gradient(90deg,black,darkcyan 2%)
.goldenrod
  background repeating-radial-gradient(rgba(218,165,32,.6),rgba(0,0,0,.6)4%),repeating-linear-gradient(150deg,black,goldenrod 3%)
.saddlebrown
  background repeating-radial-gradient(rgba(139,69,19,.6),rgba(0,0,0,.6)4%),repeating-linear-gradient(180deg,black,saddlebrown 20%)
.red
  background repeating-radial-gradient(rgba(255,0,0,.6),rgba(0,0,0,.6)4%),repeating-linear-gradient(210deg,black,red 3%)
.grey
  background repeating-radial-gradient(rgba(128,128,128,.6),rgba(0,0,0,.6)4%),repeating-linear-gradient(270deg,black,grey 3%)
.zero
  left:0%
.one
  left:-100%
.two
  left:-200%
.three
  left:-300%
.four
  left:-400%
.five
  left:-500%
.six
  left:-600%