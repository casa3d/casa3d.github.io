body
  font-family Segoe UI Symbol
  margin 0
  overflow hidden
  #ops button,fieldset
    font-family Segoe UI Symbol
  div
    transition .6s ease
  div
    font-weight bold
    &#ops:hover
      top 0
    &#ops
      height 15%
      position fixed
      min-height 100px
      width 100%
      button
        border-radius 15px 0
        box-shadow dodgerblue 4px 3px 10px
        color #FFF
        cursor pointer
        font-size 4.4em
        height 100%
        min-width 100px
        opacity .9
        padding 0
        transition .4s
        width 10%
        &:hover
          text-shadow -5px 5px 9px #000
        &:nth-of-type(1)
          background linear-gradient(45deg,#004C4C,#00C9C9)
        &:nth-of-type(2)
          background linear-gradient(45deg,#070032,#917CFF)
        &:nth-of-type(3)
          background linear-gradient(45deg,#D9671F,#FFA100)
        &:nth-of-type(4)
          background linear-gradient(45deg,#004A00,#00E500)
        &:nth-of-type(5)
          background linear-gradient(45deg,#003971,#68C2FF)
        &:nth-of-type(6)
          background linear-gradient(45deg,#62005D,#F84CF8)
        &:nth-of-type(7)
          background linear-gradient(45deg,#691B00,#FF6F3E)
    &#roll
      height 100%
      position absolute
      width 700%
      >div
        height 100%
        float left
        font-size 1.15em
        overflow auto
        width 14.2857%
        >h1
          text-transform capitalize
.in
  top 0
.out
  top -13.5%
.zero
  background #54A095
  left 0%
.one
  background #9189C0
  left -100%
.two
  background #D3894D
  left -200%
.three
  background #469E4A
  left -300%
.four
  background #4E99D5
  left -400%
.five
  background #B268B9
  left -500%
.six
  background #D38266
  left -600%